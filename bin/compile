#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

indent() {
  sed -u 's/^/       /'
}

echo "->>Installing fiberjutge dependencies..."

APT_CACHE_DIR="$CACHE_DIR/apt/cache"
APT_STATE_DIR="$CACHE_DIR/apt/state"

APT_OPTIONS="-o debug::nolocking=true -o dir::cache=$APT_CACHE_DIR -o dir::state=$APT_STATE_DIR"

echo "-----> Update and Upgrading system files..."
apt-get $APT_OPTIONS update | indent
echo "done"

echo "--------->Installing bc"
apt-get $APT_OPTIONS -y --force-yes -d install --reinstall bc | indent
echo "--------->Installing vim"
apt-get $APT_OPTIONS -y --force-yes -d install --reinstall vim | indent
echo "done"
